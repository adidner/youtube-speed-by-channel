{
    "manifest_version": 3,
    "name": "Youtube Speed by Channel",
    "description": "Sets the speed of youtube videos based on Channel",
    "version": "1.0.0",
    "permissions": ["storage", "activeTab", "scripting", "webNavigation"],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*",
                "https://youtu.be/*",
                "https://www.youtube.com/watch*"
            ],
            "js": [
                "inject/inject.js"
            ],
            "css": [
                "inject/inject.css"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ]
}